<mvc:View controllerName="code1.cl5.edu.test03.code1cl5edutest03.controller.LeftView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
    xmlns="sap.m">
    <Page id="Leftpage" title="{i18n>title}">
        <!-- 오른쪽 뷰와 메인 뷰로 넘어가기 위한 버튼 2개를 생성한다. -->
        <Button text="Main으로 이동" press="onMoveMain" />
        <Button text="Home Count" press="onMoveRight" />

        <!-- 컨트롤러에서 만든 json model을 이용하여 grid table 형태로 화면에 출력한다.
        별칭 없이 root에 선언된 모델이기 때문에 >같은 모양을 쓸 필요가 없다.
        각 column에 Team, Year, Area, Win 열이름을 사용하여 grid table을 완성시킨다. -->
        <t:Table
            rows="{/TeamSet}"
            selectionMode="MultiToggle"
            paste="onPaste"
            ariaLabelledBy="title">
            <t:extension>
                <OverflowToolbar style="Clear">
                    <Title id="title" text="BaseBall"/>
                </OverflowToolbar>
            </t:extension>
            <t:columns>
                <t:Column width="11rem">
                    <Label text="팀명" />
                    <t:template>
                        <Text text="{Team}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="11rem">
                    <Label text="창단연도" />
                    <t:template>
                        <Text text="{Year}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="11rem">
                    <Label text="연고지" />
                    <t:template>
                        <Text text="{Area}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="11rem">
                    <Label text="우승횟수" />
                    <t:template>
                        <Text text="{Win}" wrapping="false" />
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>
    </Page>
</mvc:View>
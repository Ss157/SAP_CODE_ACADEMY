<mvc:View controllerName="code1.cl5.edu.test01.code1cl5edutest01.controller.Test01View"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <VBox>
            <!-- 소문제 1, 2 각 input, label에 jsonmodel을 활용하여 값을 주었고,
            label은 후에 문제 2에서 리소스모델 즉, fiori_text.properties에서의 값으로 변경했다. -->
            <Input width="{Fi1>/width}" placeholder="{Fi1>/placeholder}" description="{Fi1>/desc}" />
            <Input width="{Fi2>/width}" placeholder="{Fi2>/placeholder}" description="{Fi2>/desc}" />
            <Label text="{label>LabelText}" />

            <!-- 소문제 3, 4 text, label, input 태그를 만든 후, 
            각 인자를 JSON Model과  msg.properties에서 얻어옴. -->
            <Text text="{Q3>/textText}" width="{msg>textWidth}" textAlign="{Q3>/textTextAlign}"/>
            <Label text="{Q3>/labelText}" design="{msg>labelDesign}" />
            <Input value="{msg>inputValue}" width="{msg>inputWidth}" description="{msg>inputDescription}" />

            <!-- 소문제 5, 6 각 json 모델을 이용해서 button과 input의 인자에 값을 주었다. -->
            <Button text="{Q5>/text1}" width="{Q5>/width1}" icon="{Q5>/icon}" />
            <Button text="{Q5>/text2}" width="{Q5>/width2}" enabled="{Q5>/enabled}" />
            <Input value="{Q6>/value}" description="{Q6>/desc1}" maxLength="{Q6>/maxLen1}" width="{Q6>/width1}" showClearIcon="{Q6>/sCI}" />
            <Input description="{Q6>/desc2}" width="{Q6>/width2}" maxLength="{Q6>/maxLen2}" />
        
            <!-- 삼각형의 면적을 구하는 프로그램 
            text와 input, button을 이용하여 화면을 구성.
            밑변, 높이를 입력받고 버튼 계산을 누르면 삼각형의 면적을 구하여
            id가 size인 input에 면적을 줌.  -->
            <HBox >
                <Text text="밑변" width="5em" />
                <Input id="underLen" width="10em" />
            </HBox>
            <HBox >
                <Text text="높이" width="5em" />
                <Input id="height" width="10em" />
            </HBox>
            <HBox >
                <Text text="면적" width="5em" />
                <Input id="size" width="10em" enabled="false" />
            </HBox>
            <Button text="계산" press="onCalc()" />

            <!-- 할인율을 구하는 프로그램
            text와 input, button을 이용하여 화면을 구성.
            원 가격, 할인된 가격를 입력받고 버튼 계산을 누르면 할인율이 계산됨 -->

            <HBox >
                <Text text="원 가격" width="5em" />
                <Input id="wonPrice" width="10em" description="원" />
            </HBox>
            <HBox >
                <Text text="할인된 가격" width="5em" />
                <Input id="discountPrice" width="10em" description="원" />
            </HBox>
            <HBox >
                <Text text="할인율" width="5em" />
                <Input id="percent" width="10em" enabled="false" description="%" />
            </HBox>
            <Button text="계산" press="discountPercent()" />

            <!-- 입력한 기존 데이터에 입력한 도시가 맞다면 그 도시이름을 한국어로
            없다면 NO Match를 출력하는 프로그램
            해당 프로그램의 화면을 label, input, button을 사용하여 구성 -->
            <HBox >
                <Label text="Country" width="5em" />
                <Input id="city" width="10em" />
            </HBox>
            <Button text="Country 체크" press="onCheckCountry()" />

            <!-- 구구단을 for문과 while문을 이용해서 다양하게 찍는 프로그램
            해당 프로그램의 화면을 button을 사용하여 구성 -->
            <HBox >
                <Button text="for 구문" press="onForLoop()" />
                <Button text="while 구문" press="onWhileLoop()" />
                <Button text="for + while 구문" press="onForWhileLoop()" />
            </HBox>
        </VBox>
    </Page>
</mvc:View>
<mvc:View controllerName="code1.cl5.srv02.code1cl5srv02.controller.PriceView"
    xmlns:viz="sap.viz.ui5.controls" 
    xmlns:layout="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori'}"
            height='30em' width="40em" vizType='donut'
            vizProperties="{
                legend: {
                            drawingEffet: 'glossy'
                        },
                plotArea: {
                            drawingEffet: 'glossy'
                          }
            }">
            <viz:dataset>
                <viz.data:FlattenedDataset data="{/PriceSet}">
                    <viz.data:dimensions>
                        <viz.data:DimensionDefinition name="Carrid"
                            value="{Carrid}" />
                        <viz.data:DimensionDefinition name="Connid"
                            value="{Connid}" />
                    </viz.data:dimensions>
                    <viz.data:measures>
                        <viz.data:MeasureDefinition name="Payment"
                            value="{Payment}" />
                    </viz.data:measures>
                </viz.data:FlattenedDataset>
            </viz:dataset>

            <viz:feeds>
                <viz.feeds:FeedItem uid="size" type="Measure"
                    values="Payment" />
                <viz.feeds:FeedItem uid="color" type="Dimension"
                    values="Carrid" />
                <viz.feeds:FeedItem uid="color" type="Dimension"
                    values="Connid" />
            </viz:feeds>
        </viz:VizFrame>
    </Page>
</mvc:View>
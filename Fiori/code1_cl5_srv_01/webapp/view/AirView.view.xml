<mvc:View controllerName="code1.cl5.srv01.code1cl5srv01.controller.AirView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <t:Table
            id="airLineList"
            visibleRowCount="5"
            rows="{/AirlineSet}" 
            selectionMode="Single"
            selectionBehavior="RowOnly"
            paste="onPaste"
            ariaLabelledBy="title">
            <t:extension>
                <OverflowToolbar style="Clear">
                    <Title id="title" text="Airline"/>
                </OverflowToolbar>
            </t:extension>
            <t:columns>
                <t:Column width="5rem">
                    <Label text="Airline" />
                    <t:template>
                        <Text text="{Carrid}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="8rem">
                    <Label text="Airline Name" />
                    <t:template>
                        <Text text="{Carrname}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="5rem">
                    <Label text="Currency" />
                    <t:template>
                        <Text text="{Currcode}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="15rem">
                    <Label text="Home page" />
                    <t:template>
                        <Text text="{Url}" wrapping="false" />
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>

        <t:Table
            id="scheduleList"
            visibleRowCount="5"
            rows="{/ScheduleSet}" 
            selectionMode="Single"
            selectionBehavior="RowOnly"
            paste="onPaste"
            ariaLabelledBy="title">
            <t:extension>
                <OverflowToolbar style="Clear">
                    <Title id="scheduletitle" text="AirlineSchedule"/>
                </OverflowToolbar>
            </t:extension>
            <t:columns>
                <t:Column width="5rem">
                    <Label text="Airline" />
                    <t:template>
                        <Text text="{Carrid}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="5rem">
                    <Label text="Connid" />
                    <t:template>
                        <Text text="{Connid}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="7rem">
                    <Label text="Country From" />
                    <t:template>
                        <Text text="{Countryfr}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="7rem">
                    <Label text="Country To" />
                    <t:template>
                        <Text text="{Countryto}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="7rem">
                    <Label text="Airport From" />
                    <t:template>
                        <Text text="{Airpfrom}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="7rem">
                    <Label text="Airport To" />
                    <t:template>
                        <Text text="{Airpto}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="7rem">
                    <Label text="Departure Time" />
                    <t:template>
                        <Text text="{Deptime}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="7rem">
                    <Label text="Arrival Time" />
                    <t:template>
                        <Text text="{Arrtime}" wrapping="false" />
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>
    </Page>
</mvc:View>
<mvc:View controllerName="code1.cl5.edu01hw.code1cl5grid01hw.controller.Grid01View"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
	xmlns:u="sap.ui.unified"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <t:Table
            rows="{/MatSet}"
            selectionMode="MultiToggle"
            selectionBehavior="RowOnly"
            paste="onPaste"
            ariaLabelledBy="title">
            <t:extension>
                <OverflowToolbar style="Clear">
                    <Title id="title" text="Material List"/>
                </OverflowToolbar>
            </t:extension>

            <t:columns>
                <t:Column width="11rem">
                    <Label text="Matnr" />
                    <t:template>
                        <Text text="{Matnr}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column width="8rem">
                    <Label text="Werks" />
                    <t:template>
                        <Text text="{Werks}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column width="11rem">
                    <Label text="Mtart" />
                    <t:template>
                        <Input value="{Mtart}"/>
                    </t:template>
                </t:Column>

                <t:Column width="8rem">
                    <Label text="VBELN" />
                    <t:template>
                        <Text text="{VBELN}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column width="5rem">
                    <Label text="VBELP" />
                    <t:template>
                        <Text text="{VBELP}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column width="9rem">
                    <Label text="PRICE" />
                    <t:template>
                        <Text text="{
                            parts:[{path:'PRICE'},{path:'CURRENCY'}],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {showMeasure: true }
                            }" wrapping="false" />
                    </t:template>
                </t:Column>
          

                <t:Column width="8rem">
                    <Label text="CURRENCY" />
                    <t:template>
                        <Text text="{CURRENCY}" wrapping="false" />
                    </t:template>
                </t:Column>
               
            </t:columns>
        </t:Table>
    </Page>
</mvc:View>
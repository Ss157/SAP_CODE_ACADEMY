<mvc:View controllerName="code1.cl5.grid01.code1cl5grid01.controller.Edu10View"
    xmlns:t="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
	xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <t:Table
            visibleRowCount="5"
            rows="{/AirlineSet}"  
            selectionMode="Single"
            selectionBehavior="RowOnly"
            paste="onPaste"
            ariaLabelledBy="title">
            <t:extension>
                <OverflowToolbar style="Clear">
                    <Title id="title" text="Airline"/>
                </OverflowToolbar>
            </t:extension>
            <t:columns>
                <t:Column width="5rem">
                    <Label text="Airline" />
                    <t:template>
                        <Text text="{Carrid}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="8rem">
                    <Label text="Airline Name" />
                    <t:template>
                        <Text text="{Carrname}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="8rem">
                    <Label text="Price" />
                    <t:template>
                        <u:Currency value="{Price}" currency="{Currkey}"/>
                    </t:template>
                </t:Column>
                <t:Column width="8rem">
                    <Label text="Price" />
                    <t:template>
                        <Text text="{
                            parts:[{path:'Price'},{path:'Currkey'}],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {showMeasure: true }
                            }" wrapping="false" />
                    </t:template>
                </t:Column>
                <!--
                <t:Column width="7rem">
                    <Label text="Currency key" />
                    <t:template>
                        <Text text="{Currkey}" wrapping="false" />
                    </t:template>
                </t:Column>
                -->
            </t:columns>
        </t:Table>

        <t:Table
            visibleRowCount="5"
            rows="{Mat>/matSet}"  
            selectionMode="Single"
            selectionBehavior="RowOnly"
            paste="onPaste"
            ariaLabelledBy="title">
            <t:extension>
                <OverflowToolbar style="Clear">
                    <Title id="MatTitle" text="Material List"/>
                </OverflowToolbar>
            </t:extension>
            <t:columns>
                <t:Column width="5rem">
                    <Label text="Material" />
                    <t:template>
                        <Text text="{Mat>Matnr}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="8rem">
                    <Label text="Material Name" />
                    <t:template>
                        <Text text="{Mat>Maktx}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="8rem">
                    <Label text="Plant" />
                    <t:template>
                         <Text text="{Mat>Werks}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="8rem">
                    <Label text="Storage Location" />
                    <t:template>
                         <Text text="{Mat>Lgort}" wrapping="false" />
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>
    </Page>
</mvc:View>
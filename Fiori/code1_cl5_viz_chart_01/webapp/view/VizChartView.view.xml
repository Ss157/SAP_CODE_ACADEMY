<mvc:View controllerName="code1.cl5.vizchart01.code1cl5vizchart01.controller.VizChartView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls" 
    xmlns:layout="sap.ui.layout"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data">
    <Page id="page" title="{i18n>title}">
        <viz:VizFrame id="idVizFrame1" uiConfig="{applicationSet:'fiori'}"
            height='20em' width="30em" vizType='line'
            vizProperties="{
            title: { 
                    text: 'line으로 만든 자동차에 대한 판매량'
                   },
            plotArea: { 
                        drawingEffect: 'glossy'
                      },
            legend: {
                        drawingEffect: 'glossy'
                    }
            }" >
            <viz:dataset>
                <viz.data:FlattenedDataset data="{car>/donutSet}">
                    <viz.data:dimensions>
                        <viz.data:DimensionDefinition name="CarType"
                            value="{car>Label}" />
                    </viz.data:dimensions>
                    <viz.data:measures>
                        <viz.data:MeasureDefinition name="count"
                            value="{car>Car}" />
                    </viz.data:measures>
                </viz.data:FlattenedDataset>
            </viz:dataset>

            <viz:feeds>
                <viz.feeds:FeedItem id='valueAxisFeed' uid="valueAxis" type="Measure"
                    values="count" />
                <viz.feeds:FeedItem id='categoryAxisFeed' uid="categoryAxis" type="Dimension"
                    values="CarType" />
            </viz:feeds>
            <viz:dependents>
                <viz:Popover id="idPopOver"></viz:Popover>
            </viz:dependents>
        </viz:VizFrame>

        <viz:VizFrame id="idVizFrame2" uiConfig="{applicationSet:'fiori'}"
            height='20em' width="30em" vizType='pie'
            vizProperties="{
            title: { 
                    text: 'pie로 만든 월에 대한 수치'
                   },
            plotArea: { 
                        drawingEffect: 'glossy'
                      },
            legend: {
                        drawingEffect: 'glossy'
                    }
            }" >
            <viz:dataset>
                <viz.data:FlattenedDataset data="{/barSet}">
                    <viz.data:dimensions>
                        <viz.data:DimensionDefinition name="Month"
                            value="{label}" />
                    </viz.data:dimensions>
                    <viz.data:measures>
                        <viz.data:MeasureDefinition name="data"
                            value="{Val}" />
                    </viz.data:measures>
                </viz.data:FlattenedDataset>
            </viz:dataset>

            <viz:feeds>
                <viz.feeds:FeedItem  uid="size" type="Measure"
                    values="data" />
                <viz.feeds:FeedItem uid="color" type="Dimension"
                    values="Month" />
            </viz:feeds>
        </viz:VizFrame>
    </Page>
</mvc:View>